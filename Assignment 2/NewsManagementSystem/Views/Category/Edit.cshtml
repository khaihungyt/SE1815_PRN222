@model NewsManagementSystem.Models.Category

@{
    ViewData["Title"] = "Edit Category By Staff";
}

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="CategoryId" />

    <div class="card">
        <div class="card-header">
            <h3>Edit Category</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd class="col-sm-10">
                    <input type="text" class="form-control" asp-for="CategoryName" />
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CategoryDesciption)
                </dt>
                <dd class="col-sm-10">
                    <input type="text" class="form-control" asp-for="CategoryDesciption" />
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10">
                    <input type="checkbox" name="IsActive" value="true" class="form-check-input" @(Model.IsActive == true ? "checked" : "") />
                    <input type="hidden" name="IsActive" value="false" />
                    <label for="IsActive">Is Active</label>
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>
