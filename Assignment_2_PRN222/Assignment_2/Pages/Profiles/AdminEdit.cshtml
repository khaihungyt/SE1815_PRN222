@page
@model Assignment_2.Pages.Profiles.AdminEditModel

@{
    ViewData["Title"] = "Edit Admin Account";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Admin Account</h1>

<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="AdminAccount.Email" class="form-control" id="Email" />
        <span asp-validation-for="AdminAccount.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="AdminAccount.Password" class="form-control" id="Password" type="password" />
        <span asp-validation-for="AdminAccount.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}